include connection.repy
include dummy_state_machine.repy

if callfunc == "initialize":
  IP = getmyip()
  PORT = 12345
  MESS = "hi"
  MAXLEN = 10

def test_passive():
  conn = Connection()
  conn.bind(IP, PORT)
  conn.listen()
  conn.accept() 
  conn.recv(MAXLEN)
  conn.send(MESS)
  conn.disconnect()
  
def test_active():
  conn = Connection()
  conn.bind(IP, PORT)
  conn.connect(IP, PORT) 
  conn.send(MESS)
  conn.recv(MAXLEN)
  conn.disconnect()

####################
# Test Helper Functions
####################

def main():
  # setup
  
  # Run tests
  test_active()
  test_passive()

  # teardown
  exitall()

if callfunc == 'initialize':
  main()
